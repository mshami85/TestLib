@model LoginVM
<div class="row">
    <div class="col-lg-4 offset-4">
        <form asp-action="Login" asp-route-ReturnUrl="@ViewBag.ReturnUrl" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="UserName">
                </div>
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Password">
                </div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-check mb-4">
                <input class="form-check-input me-2" type="checkbox" asp-for="Remember" />
                <label class="form-check-label" asp-for="Remember">
                    Remember Me
                </label>
            </div>
            <div class="mb-3 row">
                <button type="submit" class="btn btn-success btn-lg align-self-center">Login</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
